{
  "name": "project-voice",
  "version": "0.0.1",
  "description": "Communication support tool powered by generative AI",
  "scripts": {
    "dev": "concurrently \"npm run watch\" \"npm run serve\"",
    "serve": "./.venv/bin/python main.py",
    "lint": "gts lint && ./.venv/bin/yapf --diff --style yapf *.py",
    "clean": "gts clean",
    "build": "npm run build:i18n && esbuild src/index.ts --bundle --minify --outfile=static/index.js",
    "build:i18n": "lit-localize build && esbuild src/locales/*.ts --outdir=static/locales",
    "watch": "npm run build:i18n && esbuild src/index.ts --bundle --watch --define:process.env.NODE_ENV=\\\"development\\\" --outfile=static/index.js",
    "fix": "gts fix && ./.venv/bin/yapf -i --style yapf *.py",
    "pretest": "esbuild src/tests/test_index.ts --bundle --outfile=spec/test_bundle.js",
    "posttest": "npm run lint",
    "test": "jasmine-browser-runner runSpecs",
    "deploy": "npm run build && gcloud app deploy app.yaml --no-promote",
    "postinstall": " python3 -m venv .venv || true && ./.venv/bin/pip install -r requirements.txt && ./.venv/bin/pip install -r requirements-dev.txt"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@lit/localize-tools": "^0.8.0",
    "@types/dom-speech-recognition": "^0.0.4",
    "@types/jasmine": "^5.1.5",
    "@types/node": "^22.10.5",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "gts": "^5.3.1",
    "http-server": "^14.1.1",
    "jasmine-browser-runner": "^3.0.0",
    "jasmine-core": "^5.5.0",
    "node-localstorage": "^3.0.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@lit-labs/signals": "^0.1.2",
    "@lit/localize": "^0.12.1",
    "@material/web": "^2.2.0",
    "lit": "^3.2.1",
    "signal-polyfill": "^0.2.1"
  }
}
